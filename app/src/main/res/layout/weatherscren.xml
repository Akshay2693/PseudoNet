<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/daymin"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/city"
            android:elevation="100dp"
            android:padding="16dp"
            android:hint="Chandigarh"
            android:layout_margin="10dp"
            android:background="@drawable/roundedit"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="-8dp"
        android:text="SEARCH"
        android:id="@+id/search"
        android:layout_below="@+id/city"
        android:textColor="#fff"
        android:background="@drawable/grad"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_below="@+id/search"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:id="@+id/temp" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/status"

        android:layout_marginRight="31dp"
        android:layout_marginEnd="48dp"
        android:layout_below="@+id/search"
        android:layout_alignEnd="@+id/search" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:id="@+id/weather"
        android:layout_below="@+id/temp"
        android:layout_alignStart="@+id/temp"
        android:layout_marginStart="22dp" />
</RelativeLayout>